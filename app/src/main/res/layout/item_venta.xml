<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:baselineAligned="false">
        <ScrollView android:id="@+id/scrollView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="0.8">
            <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="22dp" android:id="@+id/tv_descripcion" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Nombre del produto" android:layout_weight="10"/>
        </ScrollView>
        <Button android:textSize="30dp" android:id="@+id/btn_add_one"  android:layout_width="wrap_content" android:layout_height="match_parent" android:text="+" android:singleLine="false"/>
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="0.2">
            <Button android:textSize="30dp" android:id="@+id/btn_minus_one" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="-"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textSize="21dp" android:textColor="#1c6621" android:id="@+id/tv_pventa" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="PV******"/>
        <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="25dp" android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="  x  "/>
        <Button android:textSize="30dp" android:textColor="#ff7b6f" android:id="@+id/btn_cantidad" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="#" style="?android:attr/buttonStyleSmall"/>
        <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/textView5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="  =  "/>
        <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:textColor="#1c6621" android:id="@+id/tv_subtotal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Product"/>
    </LinearLayout>

    <TextView android:textSize="25dp" android:id="@+id/espacioblanco" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-------------------"/>
</LinearLayout>
