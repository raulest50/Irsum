<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Busqueda del Servidor"
            android:textColor="#272A37"
            android:textSize="32sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Button_Buscar_Satelink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="Buscar Servidor"
            android:textSize="31sp" />

        <Button
            android:id="@+id/Button_volver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="Volver"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20sp"
                android:autoText="false"
                android:text="Ip Servidor"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="31sp" />

            <TextView
                android:id="@+id/TXView_show_serverIP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="--- . --- . --- . ---"
                android:textSize="31sp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
